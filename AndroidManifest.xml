<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.zanehuy.player"
      android:versionCode="1"
      android:versionName="1.0">
    
    <uses-sdk android:minSdkVersion="8" />
    <application android:label="@string/app_name" android:icon="@drawable/icon2">
        
		<service android:name=".PlayerService" />
        <activity android:name="com.zanehuy.player.MainActivity" android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.zanehuy.player.NowPlayingActivity" />
        <activity android:name="com.zanehuy.player.LibraryBrowserActivity" />
        <activity android:name="com.zanehuy.player.FileBrowserActivity" />
        <activity android:name="com.zanehuy.player.SettingsActivity" android:label="@string/act_settings" />
        
    </application>
</manifest>