<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:padding="0dip"
	>
	
	<ImageView
		android:id="@+id/library_album_art"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_marginRight="5dip"
		/>
	<TextView
		android:id="@+id/library_album_name"
        android:textSize="18dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/library_album_art"
		/>	
	<TextView
		android:id="@+id/library_album_year_lable"
        android:textSize="18dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_below="@id/library_album_name"
		android:layout_toRightOf="@id/library_album_art"
		android:text="@+string/library_album_year_lable"
		/>
	<TextView
		android:id="@+id/library_album_year"
        android:textSize="18dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_below="@id/library_album_name"
		android:layout_toRightOf="@id/library_album_year_lable"
		/>
    
</RelativeLayout>
